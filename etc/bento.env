BENTOV2_KATSU_EXTERNAL_PORT=8000
BENTOV2_KATSU_INTERNAL_PROJECT_DIRECTORY=/app/katsu

BENTOV2_KATSU_DEV_WES_VOL_TMP_DIR=./lib/wes/${BENTOV2_WES_VOL_TMP_DIR}
BENTOV2_KATSU_PROD_WES_VOL_TMP_DIR=../wes/${BENTOV2_WES_VOL_TMP_DIR}

BENTOV2_KATSU_MEM_LIM=4G
BENTOV2_KATSU_CPUS=4

